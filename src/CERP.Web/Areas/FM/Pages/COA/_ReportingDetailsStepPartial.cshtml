@using CERP.App;
@using CERP.FM;
@{
    var accountStatementTypes = ViewData["accountStatementTypes"] as List<AccountStatementType>;
    var accountStatementDetails = ViewData["accountStatementDetails"] as List<AccountStatementType>;

    var cashflowStatementTypes = ViewData["cashflowStatementTypes"] as List<DictionaryValue>;
    var cashflowStatementDetails = ViewData["cashflowStatementDetails"] as List<DictionaryValue>;
    
    var revenueStatementTypes = ViewData["revenueStatementTypes"] as List<DictionaryValue>;
    var revenueStatementDetails = ViewData["revenueStatementDetails"] as List<DictionaryValue>;
}

<div class="m-l-20">
    <h2>Reporting Details</h2>
    <p>
        Provide the types of reports you want from this account
    </p>
</div>
<div class="panel-body" style="padding-bottom:0">
    <div class="row" style="margin-bottom:0">
        <div class="col-sm-12">
            <div class="row m-b-15">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label for="statementType" class="control-label">Statement Type</label>
                        <select disabled="disabled" name="accountStatementTypeId" id="statementType" class="custom-select" data-error="Please select the type of statement from this account" required>
                            @for (var i = 0; i < accountStatementTypes.Count; i++)
                            {
                                <option value="@accountStatementTypes[i].Id">@accountStatementTypes[i].Title</option>
                            }
                        </select>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label for="statementDetails" class="control-label">Choose Statement Detail</label>
                        <select name="accountStatementDetailTypeId" id="statementDetails" class="custom-select" data-error="Please select statement detail for this account" required>
                        </select>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label for="cashflowStatementType" class="control-label">Choose Cashflow Statement Type</label>
                        <select name="cashFlowStatementTypeId" id="cashflowStatementType" class="custom-select" data-error="Please select cashflow statement type for this account" required>
                            <option value="" selected="selected">Choose Cashflow Statement Type</option>
                            @for (int i = 0; i < cashflowStatementTypes.Count; i++)
                            {
                                <option value="@cashflowStatementTypes[i].Id">@cashflowStatementTypes[i].Value</option>
                            }
                        </select>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label for="cashflowStatementType" class="control-label">Choose Cashflow Statement Detail</label>
                        <select name="cashFlowStatementTypeId" id="cashflowStatementType" class="custom-select" data-error="Please select cashflow statement detail for this account" required>
                            <option value="" selected="selected">Choose Cashflow Statement Detail</option>
                            @for (int i = 0; i < cashflowStatementDetails.Count; i++)
                            {
                                <option value="@cashflowStatementDetails[i].Id">@cashflowStatementDetails[i].Value</option>
                            }
                        </select>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label for="cashflowStatementType" class="control-label">Choose Revenue Statement Type</label>
                        <select name="cashFlowStatementTypeId" id="cashflowStatementType" class="custom-select" data-error="Please select revenue statement type for this account" required>
                            <option value="" selected="selected">Choose Revenue Statement Type</option>
                            @for (int i = 0; i < revenueStatementTypes.Count; i++)
                            {
                                <option value="@revenueStatementTypes[i].Id">@revenueStatementTypes[i].Value</option>
                            }
                        </select>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label for="cashflowStatementType" class="control-label">Choose Revenue Statement Detail</label>
                        <select name="cashFlowStatementTypeId" id="cashflowStatementType" class="custom-select" data-error="Please select revenue statement detail for this account" required>
                            <option value="" selected="selected">Choose Revenue Statement Detail</option>
                            @for (int i = 0; i < revenueStatementDetails.Count; i++)
                            {
                                <option value="@revenueStatementDetails[i].Id">@revenueStatementDetails[i].Value</option>
                            }
                        </select>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
            </div>
            <hr />
            
        </div>
    </div>
</div>