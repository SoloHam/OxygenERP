            //    $('#submitCOA').on('click', function (evt) {
            //        evt.preventDefault();

            //        var data = {
            //            accountName: $("#accountName").val(),
            //            accountNameSL: $("#accountNameAR").val(),
            //            companyId: $("#company").val()
            //        };


            //        $.post('', $("#coaForm").serialize(), function () {
