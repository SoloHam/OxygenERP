@section scripts {

    <script>
        var isEditingPayGrades = false;
        var curPayGradesEditRow;

        let payGrades = []
        let gridObj;
        let options = {
            buttonWidth: '100%',
            includeSelectAllOption: true,
            enableFiltering: false,
            enableClickableOptGroups: true,
            includeResetOption: true,
            includeResetDivider: true,
            enableCollapsibleOptGroups: true
        };
        $(document).ready(function () {
            $.each($('.payRangeId'), function (i, x) { $(x).multiselect(options) });
            $('#payComponentId').multiselect(options);
            $('#amountTypeId').multiselect(options);

            gridObj = $("#PayGradesGrid")[0].ej2_instances[0];
            payGradeComponentGrid = $("#PayGradeComponentGrid")[0].ej2_instances[0];
            
            gridObj.showSpinner();
            $('#payGradesLoader').slideDown(100);
            cERP.appServices.hR.organizationalManagement.payrollStructure.pS_PayGrade.getAllPayGrades().done(function (data) {
                gridObj.hideSpinner();

                gridObj.dataSource = data;
                setTimeout(function () { gridObj.hideSpinner() }, 200);
            });
            cERP.appServices.hR.organizationalManagement.payrollStructure.pS_PayRange.getAllPayRanges().done(function (data) {
                $('#payGradesLoader').slideUp(100);

                let dataMS = [];
                for (let i = 0; i < data.length; i++) {
                    let item = data[i];
                    dataMS.push({ label: `${item.code} - ${item.name}`, value: item.id, data: item });
                }
                $.each($('.payRangeId'), function (i, x) { $(x).multiselect('dataprovider', dataMS) });
            });

            $('#addPayGradesBtn').on('click', function () {
                isEditingPayGrades = false;

                let tabs = $('#payGradeSpecificFormTabs')[0].ej2_instances[0];
                tabs.properties.items[2].visible = false;

                $('#submitPayGradeBtn').val('Create PayGrade');
            });
            $('#submitPayGradeBtn').on('click', function (e) {
                e.preventDefault();
                submitPayGradeBtn('payGradeSpecificForm', 'PayGradeComponentsTab');
            });


            $('#addPayGradeComponentBtn').on('click', function () {
                loadPayGradeComponentTemplates('PayGradeComponentsTab');
            });
            $('#submitPayGradeComponentBtn').on('click', function (e) {
                e.preventDefault();
                submitPayGradeComponentBtn('PayGradeComponentsTab');
            });
        });
        function submitPayGradeBtn(formId, gridFromId) {
            if (ValidateForm(formId)) {
                gridObj.showSpinner();
                Swal.showLoading();

                let form = [];
                let functionDetails = $('#' + formId).find("textarea, input, select").serializeArray();
                form = form.concat(functionDetails);
                let payCompGrid = $("#PayGradeComponentGrid", '#' + gridFromId)[0].ej2_instances[0];
                let params = objectifyForm(form);
                params.payGradeComponents = payCompGrid.dataSource;

                let id = 0;
                if (gridObj.dataSource.length > 0)
                    id = gridObj.dataSource[gridObj.dataSource.length - 1].id;

                params.isEditing = isEditingPayGrades;

                if (isEditingPayGrades) {
                    params.id = curPayGradesEditRow.id;

                    //cERP.appServices.hR.leaveRequestTemplates.update()
                }
                else {

                    //cERP.appServices.hR.leaveRequestTemplates.update()
                }

                let formData = new FormData();
                formData.append("info", JSON.stringify(params));
                let xhrToken = $('input:hidden[name="__RequestVerificationToken"]').val();
                formData.append("__RequestVerificationToken", xhrToken);
                console.log(params);

                $.ajax({
                    url: "?handler=PayGrade",
                    async: true,
                    type: "POST",
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function (data) {
                        Swal.hideLoading();
                        console.log(data);
                        if (isEditingPayGrades) {
                            gridObj.refresh(); // refresh the Grid.

                            swal.fire("Success", "Pay Grade has successfully been updated", "success");

                            for (let i = 0; i < gridObj.dataSource.length; i++) {
                                if (gridObj.dataSource[i].id == data.id) {
                                    gridObj.dataSource[i] = data;
                                }
                            }
                            gridObj.refresh();
                        }
                        else {
                            gridObj.dataSource.push(data);

                            gridObj.refresh(); // refresh the Grid.

                            swal.fire("Success", "Pay Grade has successfully been added", "success");
                        }
                        gridObj.hideSpinner();
                    },
                    error: function (err) {
                        Swal.hideLoading();
                        if (isEditingPayGrades)
                            swal.fire("Failed", "Pay Grade couldn't be updated, please fix all errors and try again.", "error");
                        else
                            swal.fire("Failed", "Pay Grade couldn't be added, please fix all errors and try again.", "error");

                        console.log(err);
                        gridObj.hideSpinner();
                    }
                });
            }
            else {
                Swal.close();
                Swal.hideLoading();
            }
        }
        function submitPayGradeComponentBtn(formId) {
            if (ValidateForm(formId)) {
                let grid = $('#PayGradeComponentGrid', '#' + formId)[0].ej2_instances[0];

                let selectedpayGradeComponent = $('#payComponentId', '#' + formId).val();
                for (var i = 0; i < selectedpayGradeComponent.length; i++) {
                    let payGradeComponent = payGradeComponents.filter(function (x) { return x.id == selectedpayGradeComponent[i] })[0];
                    let maxAnnualLimit = $('#maxAnnualLimit', '#' + formId).val();
                    grid.dataSource.push({ payComponent: payGradeComponent, maxAnnualLimit });
                    grid.refresh();
                }
                populatePayGradeComponentTemplates(formId);
            }
            else {
                Swal.close();
                Swal.hideLoading();
            }
        }

        let payGradeComponentGrid;
        function loadPayGradeComponentTemplates(formId) {
            $('#payGradeComponentsLoader', '#' + formId).slideDown(100);
            cERP.appServices.hR.organizationalManagement.payrollStructure.pS_PayComponent.getAllComponents().done(function (data) {
                $('#payGradeComponentsLoader', '#' + formId).slideUp(100);
                payGradeComponents = data;
                populatePayGradeComponentTemplates(formId);
            });
        }
        function populatePayGradeComponentTemplates(formId) {
            let grid = $('#PayGradeComponentGrid', '#' + formId)[0].ej2_instances[0];

            try {
                payGradeComponents = payGradeComponents.filter(function (y) {
                    return grid.dataSource.filter(function (x) { return x.id == y.id }).length == 0
                });
            } catch (e) {

            }

            let dataMS = [];
            for (let i = 0; i < payGradeComponents.length; i++) {
                let item = payGradeComponents[i];
                dataMS.push({ label: `${item.code} - ${item.name}`, value: item.id, data: item });
            }
            $('#payComponentId', '#' + formId).multiselect('dataprovider', dataMS);
        }
    </script>
}
