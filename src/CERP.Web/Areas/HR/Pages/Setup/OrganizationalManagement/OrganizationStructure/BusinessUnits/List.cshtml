            gridObj.showSpinner();
            $('#businessUnitsLoader').slideDown(100);
            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_BusinessUnitTemplate.getAllBusinessUnitTemplates().done(function (data) {
                $('#businessUnitsLoader').slideUp(100);
                gridObj.hideSpinner();

                gridObj.dataSource = data;
                setTimeout(function () { gridObj.hideSpinner() }, 200);
            });

            $('#addBusinessUnitsBtn').on('click', function () {
                isEditingBusinessUnits = false;

                let tabs = $('#businessUnitSpecificFormTabs')[0].ej2_instances[0];
                tabs.properties.items[1].visible = false;

                $('#submitBusinessUnitBtn').val('Create Business Unit');
            });
            $('#submitBusinessUnitBtn').on('click', function (e) {
                e.preventDefault();

                submitBUBtn('businessUnitSpecificForm');
                
            });
        });
        function submitBUBtn(formId) {
            if (ValidateForm(formId)) {
                gridObj.showSpinner();
                Swal.showLoading();

                let form = [];
                let elm = document.getElementById(formId);
                let functionDetails = $(elm).find("textarea, input, select").serializeArray();
                form = form.concat(functionDetails);

                let params = objectifyForm(form);

                let id = 0;
                if (gridObj.dataSource.length > 0)
                    id = gridObj.dataSource[gridObj.dataSource.length - 1].id;

                params.isEditing = isEditingBusinessUnits;

                if (isEditingBusinessUnits) {
                    params.id = curBusinessUnitsEditRow.id;

                    //cERP.appServices.hR.leaveRequestTemplates.update()
                }
                else {

                    //cERP.appServices.hR.leaveRequestTemplates.update()
                }

                let formData = new FormData();
                formData.append("info", JSON.stringify(params));
                let xhrToken = $('input:hidden[name="__RequestVerificationToken"]').val();
                formData.append("__RequestVerificationToken", xhrToken);
                console.log(params);

                $.ajax({
                    url: "?handler=BusinessUnitTemplate",
                    async: true,
                    type: "POST",
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function (data) {
                        Swal.hideLoading();
                        console.log(data);
                        if (isEditingBusinessUnits) {
                            gridObj.refresh(); // refresh the Grid.

                            swal.fire("Success", "Business Unit has successfully been updated", "success");

                            for (let i = 0; i < gridObj.dataSource.length; i++) {
                                if (gridObj.dataSource[i].id == data.id) {
                                    gridObj.dataSource[i] = data;
                                }
                            }
                            gridObj.refresh();
                        }
                        else {
                            gridObj.dataSource.push(data);

                            gridObj.refresh(); // refresh the Grid.

                            swal.fire("Success", "Business Unit has successfully been added", "success");
                        }
                        gridObj.hideSpinner();
                    },
                    error: function (err) {
                        Swal.hideLoading();
                        if (isEditingBusinessUnits)
                            swal.fire("Failed", "Business Unit couldn't be updated, please fix all errors and try again.", "error");
                        else
                            swal.fire("Failed", "Business Unit couldn't be added, please fix all errors and try again.", "error");

                        console.log(err);
                        gridObj.hideSpinner();
                    }
                });
            }
            else {
                Swal.close();
                Swal.hideLoading();
            }
        }
    </script>
