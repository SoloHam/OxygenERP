    function toolbarClick(args) {
        let gridObj = document.getElementById("SkillsGrid").ej2_instances[0];

        if (args.item.id === 'SkillsGrid_pdfexport') {
            gridObj.pdfExport();
        }
        if (args.item.id === 'SkillsGrid_excelexport') {
