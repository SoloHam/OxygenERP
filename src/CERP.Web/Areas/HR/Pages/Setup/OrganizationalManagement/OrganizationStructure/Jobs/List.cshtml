@section scripts {

    <script>
        var isEditingJobs = false;
        var curJobsEditRow;

        let functions = []
        let tasks = []
        let skills = []
        let academia = []
        let compensationMatrices = []
        $(document).ready(function () {
            let options = {
                buttonWidth: '100%',
                includeSelectAllOption: true,
                enableFiltering: false,
                enableClickableOptGroups: true,
                includeResetOption: true,
                includeResetDivider: true,
                enableCollapsibleOptGroups: true
            };
            $('#tasksIds').multiselect(options);
            $('#functionsIds').multiselect(options);
            $('#skillsIds').multiselect(options);
            $('#academiaIds').multiselect(options);
            $('#compensationMatrixId').multiselect(options);

            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_TaskTemplate.getList({}).done(function (data) {
                tasks = data.items;

                let dataMS = [];
                for (let i = 0; i < data.items.length; i++) {
                    let item = data.items[i];
                    dataMS.push({ label: `${item.code} - ${item.name}`, value: item.id, data: item });
                }
                $('#tasksIds').multiselect('dataprovider', dataMS);
            });
            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_FunctionTemplate.getList({}).done(function (data) {
                functions = data.items;

                let dataMS = [];
                for (let i = 0; i < data.items.length; i++) {
                    let item = data.items[i];
                    dataMS.push({ label: `${item.code} - ${item.name}`, value: item.id, data: item });
                }
                $('#functionsIds').multiselect('dataprovider', dataMS);
            });
            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_SkillTemplate.getList({}).done(function (data) {
                skills = data.items;

                let dataMS = [];
                for (let i = 0; i < data.items.length; i++) {
                    let item = data.items[i];
                    dataMS.push({ label: `${item.code} - ${item.name}`, value: item.id, data: item });
                }
                $('#skillsIds').multiselect('dataprovider', dataMS);
            });
            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_AcademiaTemplate.getList({}).done(function (data) {
                academia = data.items;

                let dataMS = [];
                for (let i = 0; i < data.items.length; i++) {
                    let item = data.items[i];
                    dataMS.push({ label: `${item.code} - ${item.name}`, value: item.id, data: item });
                }
                $('#academiaIds').multiselect('dataprovider', dataMS);
            });
            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_CompensationMatrixTemplate.getList({}).done(function (data) {
                compensationMatrices = data.items;

                let dataMS = [];
                for (let i = 0; i < data.items.length; i++) {
                    let item = data.items[i];
                    dataMS.push({ label: `${item.code} - ${item.name}`, value: item.id, data: item });
                }
                $('#compensationMatrixId').multiselect('dataprovider', dataMS);
            });

            let gridObj = $("#JobsGrid")[0].ej2_instances[0];
            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_JobTemplate.getAllJobTemplates().done(function (data) {
                gridObj.dataSource = data;
                gridObj.refresh();
                setTimeout(function () { gridObj.hideSpinner() }, 200);
            });

            $('#addJobsBtn').on('click', function () {
                isEditingJobs = false;

                $('#submitJobBtn').val('Create Job');
            });
            $('#submitJobBtn').on('click', function (e) {
                e.preventDefault();
                if (ValidateForm('jobSpecificForm')) {
                    gridObj.showSpinner();
                    Swal.showLoading();

                    let form = [];
                    let jobDetails = $('#jobSpecificForm').find("textarea, input, select").serializeArray();
                    form = form.concat(jobDetails);

                    let params = objectifyForm(form);

                    let id = 0;
                    if (gridObj.dataSource.length > 0)
                        id = gridObj.dataSource[gridObj.dataSource.length - 1].id;

                    params.isEditing = isEditingJobs;

                    if (isEditingJobs) {
                        params.id = curJobsEditRow.id;

                        //cERP.appServices.hR.leaveRequestTemplates.update()
                    }
                    else {

                        //cERP.appServices.hR.leaveRequestTemplates.update()
                    }

                    let selectedTasks = $('#tasksIds').val();
                    console.log(selectedTasks);
                    let selectedTasksTemplates = [];
                    params.jobTaskTemplates = [];
                    for (var i = 0; i < selectedTasks.length; i++) {
                        selectedTasksTemplates.push(tasks.filter(x => x.id == selectedTasks[i])[0]);
                        let toAdd = { taskTemplate: selectedTasksTemplates[i] };
                        if (isEditingJobs) {
                            toAdd.jobTemplateId = curJobsEditRow.id;
                        }
                        params.jobTaskTemplates.push(toAdd);
                    }
                    let selectedFunctions = $('#functionsIds').val();
                    console.log(selectedFunctions);
                    let selectedFunctionsTemplates = [];
                    params.jobFunctionTemplates = [];
                    for (var i = 0; i < selectedFunctions.length; i++) {
                        selectedFunctionsTemplates.push(functions.filter(x => x.id == selectedFunctions[i])[0]);
                        let toAdd = { functionTemplate: selectedFunctionsTemplates[i] };
                        if (isEditingJobs) {
                            toAdd.jobTemplateId = curJobsEditRow.id;
                        }
                        params.jobFunctionTemplates.push(toAdd);
                    }

                    let selectedSkills = $('#skillsIds').val();
                    console.log(selectedSkills);
                    let selectedSkillsTemplates = [];
                    params.jobSkillTemplates = [];
                    for (var i = 0; i < selectedSkills.length; i++) {
                        selectedSkillsTemplates.push(skills.filter(x => x.id == selectedSkills[i])[0]);
                        let toAdd = { skillTemplate: selectedSkillsTemplates[i] };
                        if (isEditingJobs) {
                            toAdd.jobTemplateId = curJobsEditRow.id;
                        }
                        params.jobSkillTemplates.push(toAdd);
                    }
                    let selectedAcademia = $('#academiaIds').val();
                    console.log(selectedAcademia);
                    let selectedAcademiaTemplates = [];
                    params.jobAcademiaTemplates = [];
                    for (var i = 0; i < selectedAcademia.length; i++) {
                        selectedAcademiaTemplates.push(academia.filter(x => x.id == selectedAcademia[i])[0]);
                        let toAdd = { academiaTemplate: selectedAcademiaTemplates[i] };
                        if (isEditingJobs) {
                            toAdd.jobTemplateId = curJobsEditRow.id;
                        }
                        params.jobAcademiaTemplates.push(toAdd);
                    }

                    let formData = new FormData();
                    formData.append("info", JSON.stringify(params));
                    let xhrToken = $('input:hidden[name="__RequestVerificationToken"]').val();
                    formData.append("__RequestVerificationToken", xhrToken);
                    console.log(params);
                    $.ajax({
                        url: "?handler=JobTemplate",
                        async: true,
                        type: "POST",
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (data) {
                            Swal.hideLoading();
                            console.log(data);
                            if (isEditingJobs) {
                                gridObj.refresh(); // refresh the Grid.

                                swal.fire("Success", "Job has successfully been updated", "success");

                                for (let i = 0; i < gridObj.dataSource.length; i++) {
                                    if (gridObj.dataSource[i].id == data.id) {
                                        gridObj.dataSource[i] = data;
                                    }
                                }
                                gridObj.refresh();
                            }
                            else {
                                gridObj.dataSource.push(data);

                                gridObj.refresh(); // refresh the Grid.

                                swal.fire("Success", "Job has successfully been added", "success");
                            }
                            gridObj.hideSpinner();
                        },
                        error: function (err) {
                            Swal.hideLoading();
                            if (isEditingJobs)
                                swal.fire("Failed", "Job couldn't be updated, please fix all errors and try again.", "error");
                            else
                                swal.fire("Failed", "Job couldn't be added, please fix all errors and try again.", "error");

                            console.log(err);
                            gridObj.hideSpinner();
                        }
                    });
                }
                else {
                    Swal.close();
                    Swal.hideLoading();
                }
            });

            $('#submitQualificationBtn').on('click', function (e) {
                e.preventDefault();
                if (ValidateForm('qualificationsForm')) {
                    qualificationsObj.showSpinner();
                    Swal.showLoading();

                    let form = [];
                    let qualificationDetails = $('#qualificationsForm').find("textarea, input, select").serializeArray();
                    form = form.concat(qualificationDetails);

                    let params = objectifyForm(form);

                    let id = 0;
                    if (qualificationsObj.dataSource.length > 0)
                        id = qualificationsObj.dataSource[qualificationsObj.dataSource.length - 1].id;

                    params.isEditing = isEditingQualifications;
                    if (isEditingJobs)
                        params.jobTemplateId = curJobsEditRow.id;

                    if (isEditingQualifications) {
                        params.id = curQualificationsEditRow.id;

                        //cERP.appServices.hR.leaveRequestTemplates.update()
                    }
                    else {

                        //cERP.appServices.hR.leaveRequestTemplates.update()
                    }

                    let formData = new FormData();
                    formData.append("info", JSON.stringify(params));
                    let xhrToken = $('input:hidden[name="__RequestVerificationToken"]').val();
                    formData.append("__RequestVerificationToken", xhrToken);
                    console.log(params);

                    $.ajax({
                        url: "?handler=JobQualificationTemplate",
                        async: true,
                        type: "POST",
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (data) {
                            Swal.hideLoading();
                            console.log(data);
                            if (isEditingQualifications) {
                                qualificationsObj.refresh(); // refresh the Grid.

                                swal.fire("Success", "Qualification has successfully been updated", "success");

                                for (let i = 0; i < qualificationsObj.dataSource.length; i++) {
                                    if (qualificationsObj.dataSource[i].id == data.id) {
                                        qualificationsObj.dataSource[i] = data;
                                    }
                                }
                                qualificationsObj.refresh();
                            }
                            else {
                                qualificationsObj.dataSource.push(data);

                                qualificationsObj.refresh(); // refresh the Grid.

                                swal.fire("Success", "Qualification has successfully been added", "success");
                            }
                            qualificationsObj.hideSpinner();
                        },
                        error: function (err) {
                            Swal.hideLoading();
                            if (isEditingQualifications)
                                swal.fire("Failed", "Qualification couldn't be updated, please fix all errors and try again.", "error");
                            else
                                swal.fire("Failed", "Qualification couldn't be added, please fix all errors and try again.", "error");

                            console.log(err);
                            qualificationsObj.hideSpinner();
                        }
                    });
                }
                else {
                    Swal.close();
                    Swal.hideLoading();
                }
            });
        });
    </script>
}
