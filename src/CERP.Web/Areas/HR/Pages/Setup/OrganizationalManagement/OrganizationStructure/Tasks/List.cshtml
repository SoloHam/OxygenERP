@section scripts {

    <script>
        var isEditingTasks = false;
        var curTasksEditRow;

        let skills = []
        let academia = []
        let compensationMatrices = []

        let skillsGrid;
        function populateSkillTemplates() {
            try {
                skills = skills.filter(function (y) {
                    return skillsGrid.dataSource.filter(function (x) { return x.id == y.id }).length == 0
                });
            } catch (e) {

            }

            let dataMS = [];
            for (let i = 0; i < skills.length; i++) {
                let item = skills[i];
                dataMS.push({ label: `${item.code} - ${item.name}`, value: item.id, data: item });
            }
            $('#skillsIds').multiselect('dataprovider', dataMS);
            console.log(dataMS);
        }
        function loadSkillTemplates() {
            $('#skillsLoader').slideDown(100);
            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_SkillTemplate.getList({}).done(function (data) {
                $('#skillsLoader').slideUp(100);
                skills = data.items;
                populateSkillTemplates();
            });
        }


        let academiaGrid;
        function populateAcademiaTemplates() {
            try {
                academia = academia.filter(function (y) {
                    return academiaGrid.dataSource.filter(function (x) { return x.id == y.id }).length == 0
                });
            } catch (e) {

            }

            let dataMS = [];
            for (let i = 0; i < academia.length; i++) {
                let item = academia[i];
                dataMS.push({ label: `${item.code} - ${item.name}`, value: item.id, data: item });
            }
            $('#academiaIds').multiselect('dataprovider', dataMS);
        }
        function loadAcademiaTemplates() {
            $('#academiaLoader').slideDown(100);
            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_AcademiaTemplate.getList({}).done(function (data) {
                $('#academiaLoader').slideUp(100);
                academia = data.items;
                populateAcademiaTemplates();

            });
        }


        let compensationMatrixGrid;
        function populateCompensationMatrixTemplates() {
            try {
                compensationMatrices = compensationMatrices.filter(function (y) {
                    return compensationMatrixGrid.dataSource.filter(function (x) { return x.id == y.id }).length == 0
                });
            } catch (e) {

            }

            let dataMS = [];
            for (let i = 0; i < compensationMatrices.length; i++) {
                let item = compensationMatrices[i];
                dataMS.push({ label: `${item.code} - ${item.name}`, value: item.id, data: item });
            }
            $('#compensationMatrixId').multiselect('dataprovider', dataMS);
        }
        function loadCompensationMatrixTemplates() {
            $('#compensationMatricesLoader').slideDown(100);
            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_CompensationMatrixTemplate.getList({}).done(function (data) {
                $('#compensationMatricesLoader').slideUp(100);
                compensationMatrices = data.items;
                populateCompensationMatrixTemplates();
            });
        }


        $(document).ready(function () {
            let options = {
                buttonWidth: '100%',
                includeSelectAllOption: true,
                enableFiltering: false,
                enableClickableOptGroups: true,
                includeResetOption: true,
                includeResetDivider: true,
                enableCollapsibleOptGroups: true
            };
            $('#skillsIds').multiselect(options);
            $('#academiaIds').multiselect(options);
            $('#reviewPeriod').multiselect(options);
            $('#compensationMatrixId').multiselect(options);

            let gridObj = $("#TasksGrid")[0].ej2_instances[0];
            gridObj.showSpinner();
            $('#tasksLoader').slideDown(100);
            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_TaskTemplate.getAllTaskTemplates().done(function (data) {
                gridObj.hideSpinner();
                $('#tasksLoader').slideUp(100);
                gridObj.dataSource = data;
                setTimeout(function () { gridObj.hideSpinner() }, 200);
            });


            $('#addTasksBtn').on('click', function () {
                isEditingTasks = false;

                let tabs = $('#taskSpecificFormTabs')[0].ej2_instances[0];
                tabs.properties.items[4].visible = false;

                $('#submitTaskBtn').val('Create Task');
            });
            $('#addSkillBtn').on('click', function () {
                loadSkillTemplates();
            });
            skillsGrid = $('#SkillReferenceGrid')[0].ej2_instances[0];
            $('#submitSkillBtn').on('click', function () {
                let selectedSkills = $('#skillsIds').val();
                for (var i = 0; i < selectedSkills.length; i++) {
                    let skill = skills.filter(function (x) { return x.id == selectedSkills[i] })[0];
                    skillsGrid.dataSource.push(skill);
                    skillsGrid.refresh();
                }
                populateSkillTemplates();
            });
            $('#addAcademiaBtn').on('click', function () {
                loadAcademiaTemplates();
            });
            academiaGrid = $('#AcademiaReferenceGrid')[0].ej2_instances[0];
            $('#submitAcademiaBtn').on('click', function () {
                let selectedAcademia = $('#academiaIds').val();
                for (var i = 0; i < selectedAcademia.length; i++) {
                    let curAcademia = academia.filter(function (x) { return x.id == selectedAcademia[i] })[0];
                    academiaGrid.dataSource.push(curAcademia);
                    academiaGrid.refresh();
                }
                populateAcademiaTemplates();
            });
            $('#addCompensationMatrixBtn').on('click', function () {
                loadCompensationMatrixTemplates();
            });
            compensationMatrixGrid = $('#CompensationMatrixReferenceGrid')[0].ej2_instances[0];
            $('#submitCompensationMatrixBtn').on('click', function () {
                let selectedCompensationMatrix = $('#compensationMatrixId').val();
                for (var i = 0; i < selectedCompensationMatrix.length; i++) {
                    let compensationMatrix = compensationMatrices.filter(function (x) { return x.id == selectedCompensationMatrix[i] })[0];
                    compensationMatrixGrid.dataSource.push(compensationMatrix);
                    compensationMatrixGrid.refresh();
                }
                populateCompensationMatrixTemplates();
            });
            $('#submitTaskBtn').on('click', function (e) {
                e.preventDefault();
                if (ValidateForm('taskSpecificForm')) {
                    gridObj.showSpinner();
                    Swal.showLoading();

                    let form = [];
                    let taskDetails = $('#taskSpecificForm').find("textarea, input, select").serializeArray();
                    form = form.concat(taskDetails);

                    let params = objectifyForm(form);

                    let id = 0;
                    if (gridObj.dataSource.length > 0)
                        id = gridObj.dataSource[gridObj.dataSource.length - 1].id;

                    params.isEditing = isEditingTasks;

                    if (isEditingTasks) {
                        params.id = curTasksEditRow.id;

                        //cERP.appServices.hR.leaveRequestTemplates.update()
                    }
                    else {

                        //cERP.appServices.hR.leaveRequestTemplates.update()
                    }

                    params.DoesKPI = $('#doesKPI').parent().hasClass('active');
                    params.WorkflowLinkability = $('#workflowLinkability').parent().hasClass('active');

                    let selectedSkills = skillsGrid.dataSource.map(function (item) { return { skillTemplate: item } });;
                    params.taskSkillTemplates = [];
                    for (var i = 0; i < selectedSkills.length; i++) {
                        let toAdd = selectedSkills[i]
                        if (isEditingTasks) {
                            toAdd.taskTemplateId = curTasksEditRow.id;
                        }
                        params.taskSkillTemplates.push(toAdd);
                    }

                    let selectedAcademia = academiaGrid.dataSource.map(function (item) { return { academiaTemplate: item } });;
                    console.log(selectedAcademia);
                    params.taskAcademiaTemplates = [];
                    for (var i = 0; i < selectedAcademia.length; i++) {
                        let toAdd = selectedAcademia[i]
                        if (isEditingTasks) {
                            toAdd.taskTemplateId = curTasksEditRow.id;
                        }
                        params.taskAcademiaTemplates.push(toAdd);
                    }

                    params.compensationMatrixId = compensationMatrixGrid.dataSource.length > 0 ? compensationMatrixGrid.dataSource[0].id : '';
                    console.log(params.compensationMatrixId);
                    let formData = new FormData();
                    formData.append("info", JSON.stringify(params));
                    let xhrToken = $('input:hidden[name="__RequestVerificationToken"]').val();
                    formData.append("__RequestVerificationToken", xhrToken);
                    console.log(params);

                    $.ajax({
                        url: "?handler=TaskTemplate",
                        async: true,
                        type: "POST",
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (data) {
                            Swal.hideLoading();
                            console.log(data);
                            if (isEditingTasks) {
                                gridObj.refresh(); // refresh the Grid.

                                swal.fire("Success", "Task has successfully been updated", "success");

                                for (let i = 0; i < gridObj.dataSource.length; i++) {
                                    if (gridObj.dataSource[i].id == data.id) {
                                        gridObj.dataSource[i] = data;
                                    }
                                }
                                gridObj.refresh();
                            }
                            else {
                                gridObj.dataSource.push(data);

                                gridObj.refresh(); // refresh the Grid.

                                swal.fire("Success", "Task has successfully been added", "success");
                            }
                            gridObj.hideSpinner();
                        },
                        error: function (err) {
                            Swal.hideLoading();
                            if (isEditingTasks)
                                swal.fire("Failed", "Task couldn't be updated, please fix all errors and try again.", "error");
                            else
                                swal.fire("Failed", "Task couldn't be added, please fix all errors and try again.", "error");

                            console.log(err);
                            gridObj.hideSpinner();
                        }
                    });
                }
                else {
                    Swal.close();
                    Swal.hideLoading();
                }
            });
        });
    </script>
}
