<script>
    function loadPositionStatusesDropdown() {

    }

    let isAuditTrail = false;

    function alertBtnClick() {
        let dialogObj = document.getElementById('alert_dialog').ej2_instances[0];
        let dialogObj1 = document.getElementById('alert_dialog_1').ej2_instances[0];
        dialogObj.hide();
        dialogObj1.hide();
    }
    function toolbarClick(args) {
        let gridObj = document.getElementById("TasksGrid").ej2_instances[0];

        if (args.item.id === 'TasksGrid_pdfexport') {
            gridObj.pdfExport();
        }
        if (args.item.id === 'TasksGrid_excelexport') {
            gridObj.excelExport();
        }
        if (args.item.id === 'TasksGrid_csvexport') {
            gridObj.csvExport();
        }
        if (this.getSelectedRecords().length > 0) {
            let withHeader = false;
            if (args.item.id === 'copyHeader') {
                withHeader = true;
            }
            this.copy(withHeader);
        }
        else {
            if (args.item.id === 'copyHeader') {
                let dialogObj = document.getElementById('alert_dialog').ej2_instances[0];
                dialogObj.show();
            }
            else if (args.item.id === 'copy') {
                let dialogObj = document.getElementById('alert_dialog_1').ej2_instances[0];
                dialogObj.show();
            }
        }
        if (args.item.id === 'showActions') {
            gridObj.toolbar = [{ text: "Hide Actions", tooltipText: "Actions", prefixIcon: "e-custom-hide-actions", id: "hideActions" }, { text: "Toggle Grouping", tooltipText: "Grouping", prefixIcon: "e-custom-group-toggle", id: "toggleGrouping" }, { text: "Audit Trail", tooltipText: "View Audit Trail", prefixIcon: "e-custom-audit-trail", id: "toggleaudittrail" }, { text: "Toggle Detailed", tooltipText: "Toggle Detailed", prefixIcon: "e-toggledetailed", id: "toggleDetailed" }, "ExcelExport", "PdfExport", "CsvExport", "Print", "Search", { text: "Copy", tooltipText: "Copy", prefixIcon: "e-copy", id: "copy" }, { text: "Copy With Header", tooltipText: "Copy With Header", prefixIcon: "e-copy", id: "copyHeader" }, "ColumnChooser"];
            gridObj.refresh();
        }
        if (args.item.id === 'hideActions') {
            gridObj.toolbar = [{ text: "Show Actions", tooltipText: "Actions", prefixIcon: "e-custom-show-actions", id: "showActions" }, "Search", "ColumnChooser"];
            gridObj.showColumnChooser = true;
            gridObj.refresh();
        }
        if (args.item.id === 'toggleGrouping') {
            gridObj.allowGrouping = !gridObj.allowGrouping;
            gridObj.refresh();
        }
        if (args.item.id === 'toggleDetailed') {
            let visCount = 0;
            for (let i = 0; i < gridObj.columns.length; i++) {
                if (gridObj.columns[i].visible) visCount++;
            }
            if (visCount == gridObj.columns.length) {
                for (let i = 0; i < gridObj.columns.length; i++) {
                    let col = gridObj.columns[i];
                    if (typeof col.customAttributes != 'undefined' && typeof col.customAttributes.id != 'undefined' && col.customAttributes.id == 'detailed')
                        gridObj.showHider.hide(col.headerText, 'headerText');
                    else if (col.showInColumnChooser)
                        gridObj.showHider.show(col.headerText, 'headerText');
                }
            }
            else {
                for (let i = 0; i < gridObj.columns.length; i++) {
                    let col = gridObj.columns[i];
                    if (col.showInColumnChooser)
                        gridObj.showHider.show(col.headerText, 'headerText');
                }
            }
        }
        if (args.item.id === 'toggleaudittrail') {

            if (!isAuditTrail) {
                var agtGrid = $("#AuditTrailGrid")[0].ej2_instances[0];
                gridObj.showSpinner();

                $.ajax({
                    url: '?handler=DataAuditTrail',
                    async: true,
                    type: "GET",
                    data: {},
                    success: function (data) {
                        gridObj.hideSpinner();

                        //agtGrid.childGrid.childGrid.dataSource = data.tertiaryDS;
                        //agtGrid.childGrid.dataSource = data.secondaryDS;
                        agtGrid.dataSource = data.ds;
                        agtGrid.refresh();

                        $(".customContentArea").css('position', 'unset');
                        $("#auditTrail").slideDown(200);
                    },
                    error: function (data) {
                        gridObj.hideSpinner();

                        $(".customContentArea").css('position', 'absolute');
                        $("#auditTrail").slideUp(200);

                        swal.fire('Failed', `An error occured while generating the audit trail`, 'error');
                    }
                });

            }
            else {
                $(".customContentArea").css('position', 'absolute');
                $("#auditTrail").slideUp(200);
            }

            isAuditTrail = !isAuditTrail;
        }
        setTimeout(function () { gridObj.hideSpinner() }, 200);
    }
    function commandClick(args) {
        let gridObj = document.getElementById("TasksGrid").ej2_instances[0];
        if (args.commandColumn.type == "Edit") {
            isEditingTasks = true;
            let params = args.rowData;
            curTasksEditRow = params;

            toggleAreaFormBtn('tasksForm', false);

            setTimeout(function () {
                $('#submitTaskBtn').val('Update Task');
                toggleAreaFormBtn('tasksForm', true);
            }, 200);

            FillFormByObject(params, $('#tasksForm'));
            $('#tasksLoader').slideDown(100);

            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_TaskTemplate.getTaskTemplate(params.id).done(function (data) {
                $('#tasksLoader').slideUp(100);

                $('#doesKPI').parent().removeClass('active');
                if (params.doesKPI)
                    $('#doesKPI').parent().addClass('active');
                $('#workflowLinkability').parent().removeClass('active');
                if (params.workflowLinkability)
                    $('#workflowLinkability').parent().addClass('active');

                skillsGrid.dataSource = [];
                skillsGrid.dataSource = params.taskSkillTemplates.map(function (item) { return item.skillTemplate });
                skillsGrid.refresh();

                academiaGrid.dataSource = [];
                academiaGrid.dataSource = params.taskAcademiaTemplates.map(function (item) { return item.academiaTemplate });
                academiaGrid.refresh();

                compensationMatrixGrid.dataSource = [];
                compensationMatrixGrid.dataSource.push(params.compensationMatrix);
                compensationMatrixGrid.refresh();
                //$('#skillsIds').multiselect('select', params.taskSkillTemplates.map(function (item) { return item.skillTemplateId }));
                //$('#academiaIds').multiselect('select', params.taskAcademiaTemplates.map(function (item) { return item.academiaTemplateId }));

                //$('#compensationMatrixId').multiselect('select', params.compensationMatrixTemplateId);
            });
            let tabs = $('#taskSpecificFormTabs')[0].ej2_instances[0];
            tabs.properties.items[4].visible = true;
            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_TaskTemplate.getAllReferences(params.id).done(function (data)
            {
                let refGrid = $('#ReferenceReferenceGrid')[0].ej2_instances[0];
                refGrid.dataSource = data;
                refGrid.refresh();

                setTimeout(function () { refGrid.hideSpinner() }, 200);
            });
        }
        else if (args.commandColumn.type == "Copy") {
            this.copy(false);
        }

        setTimeout(function () { gridObj.hideSpinner() }, 200);
    }
    function taskActionComplete(args) {
        let gridObj = document.getElementById("TasksGrid").ej2_instances[0];
        setTimeout(function () { gridObj.hideSpinner() }, 200)
    }
    function taskActionBegin(args) {
        if (args.requestType == "delete") {
            let gridObj = document.getElementById("TasksGrid").ej2_instances[0];
            Swal.showLoading();

            let formData = new FormData();
            formData.append("tasks", JSON.stringify(args.data));
            let xhrToken = $('input:hidden[name="__RequestVerificationToken"]').val();
            formData.append("__RequestVerificationToken", xhrToken);

            $.ajax({
                url: '?handler=TaskTemplate',
                async: true,
                type: "DELETE",
                data: formData,
                contentType: false,
                processData: false,
                success: function (data) {
                    gridObj.hideSpinner();
                    swal.fire("Success", "Task(s) has successfully been deleted", "success");

                    if ($('#tasksForm').css('display') !== 'none') {
                        $('#tasksForm').slideUp();
                    }
                },
                error: function (err) {
                    gridObj.hideSpinner();
                    swal.fire("Failed", "Task(s) couldn't be deleted, please fix all errors and try again.", "error");

                    console.log(err);
                }
            });
            setTimeout(function () { gridObj.hideSpinner() }, 200);
        }
    }

    function referenceActionComplete(args) {
        if (args.requestType == "delete") {
            populateSkillTemplates();
            populateAcademiaTemplates();
            populateCompensationMatrixTemplates();
        }
    }
    function referenceActionBegin(args) {
        if (args.requestType == "delete") {
            loadSkillTemplates();
            loadAcademiaTemplates();
            loadCompensationMatrixTemplates();
        }
    }
