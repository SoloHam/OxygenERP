@section scripts {

    <script>
        var isEditingCompensationMatrices = false;
        var curCompensationMatricesEditRow;

        let skills = []
        let academia = []
        let compensationMatrices = []
        $(document).ready(function () {
            let options = {
                buttonWidth: '100%',
                includeSelectAllOption: true,
                enableFiltering: false,
                enableClickableOptGroups: true,
                includeResetOption: true,
                includeResetDivider: true,
                enableCollapsibleOptGroups: true
            };
            $('#skillsIds').multiselect(options);
            $('#academiaIds').multiselect(options);
            $('#reviewPeriod').multiselect(options);
            $('#compensationMatrixId').multiselect(options);

            let compensationMatrixObj = $("#CompensationMatrixGrid")[0].ej2_instances[0];
            let gridObj = $("#CompensationMatricesGrid")[0].ej2_instances[0];
            gridObj.showSpinner();
            $('#compensationMatricesLoader').slideDown(100);
            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_CompensationMatrixTemplate.getAllCompensationMatrixTemplates().done(function (data) {
                gridObj.hideSpinner();
                $('#compensationMatricesLoader').slideUp(100);
                gridObj.dataSource = data;
                setTimeout(function () { gridObj.hideSpinner() }, 200);
            });

            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_SkillTemplate.getList({}).done(function (data) {
                skills = data.items;

                let dataMS = [];
                for (let i = 0; i < data.items.length; i++) {
                    let item = data.items[i];
                    dataMS.push({ label: `${item.code} - ${item.name}`, value: item.id, data: item });
                }
                $('#skillsIds').multiselect('dataprovider', dataMS);
            });
            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_AcademiaTemplate.getList({}).done(function (data) {
                academia = data.items;

                let dataMS = [];
                for (let i = 0; i < data.items.length; i++) {
                    let item = data.items[i];
                    dataMS.push({ label: `${item.code} - ${item.name}`, value: item.id, data: item });
                }
                $('#academiaIds').multiselect('dataprovider', dataMS);
            });
            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_CompensationMatrixTemplate.getList({}).done(function (data) {
                compensationMatrices = data.items;

                let dataMS = [];
                for (let i = 0; i < data.items.length; i++) {
                    let item = data.items[i];
                    dataMS.push({ label: `${item.code} - ${item.name}`, value: item.id, data: item });
                }
                $('#compensationMatrixId').multiselect('dataprovider', dataMS);
            });

            $('#addCompensationMatricesBtn').on('click', function () {
                isEditingCompensationMatrices = false;

                $('#submitCompensationMatrixBtn').val('Create Compensation Matrix');
            });
            $('#submitCompensationMatrixBtn').on('click', function (e) {
                e.preventDefault();
                if (ValidateForm('compensationMatrixSpecificForm')) {
                    gridObj.showSpinner();
                    Swal.showLoading();

                    let form = [];
                    let functionDetails = $('#compensationMatrixSpecificForm').find("textarea, input, select").serializeArray();
                    form = form.concat(functionDetails);

                    let params = objectifyForm(form);

                    let id = 0;
                    if (gridObj.dataSource.length > 0)
                        id = gridObj.dataSource[gridObj.dataSource.length - 1].id;

                    params.isEditing = isEditingCompensationMatrices;

                    if (isEditingCompensationMatrices) {
                        params.id = curCompensationMatricesEditRow.id;

                        //cERP.appServices.hR.leaveRequestTemplates.update()
                    }
                    else {
                        //cERP.appServices.hR.leaveRequestTemplates.update()
                    }

                    params.CompensationMatrixData = JSON.stringify(compensationMatrixObj.dataSource);

                    let formData = new FormData();
                    formData.append("info", JSON.stringify(params));
                    let xhrToken = $('input:hidden[name="__RequestVerificationToken"]').val();
                    formData.append("__RequestVerificationToken", xhrToken);
                    console.log(params);

                    $.ajax({
                        url: "?handler=CompensationMatrixTemplate",
                        async: true,
                        type: "POST",
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (data) {
                            Swal.hideLoading();
                            console.log(data);
                            if (isEditingCompensationMatrices) {
                                gridObj.refresh(); // refresh the Grid.

                                swal.fire("Success", "Compensation Matrix has successfully been updated", "success");

                                for (let i = 0; i < gridObj.dataSource.length; i++) {
                                    if (gridObj.dataSource[i].id == data.id) {
                                        gridObj.dataSource[i] = data;
                                    }
                                }
                                gridObj.refresh();
                            }
                            else {
                                gridObj.dataSource.push(data);

                                gridObj.refresh(); // refresh the Grid.

                                swal.fire("Success", "Compensation Matrix has successfully been added", "success");
                            }
                            gridObj.hideSpinner();
                        },
                        error: function (err) {
                            Swal.hideLoading();
                            if (isEditingCompensationMatrices)
                                swal.fire("Failed", "Compensation Matrix couldn't be updated, please fix all errors and try again.", "error");
                            else
                                swal.fire("Failed", "Compensation Matrix couldn't be added, please fix all errors and try again.", "error");

                            console.log(err);
                            gridObj.hideSpinner();
                        }
                    });
                }
                else {
                    Swal.close();
                    Swal.hideLoading();
                }
            });
        });
    </script>
}
