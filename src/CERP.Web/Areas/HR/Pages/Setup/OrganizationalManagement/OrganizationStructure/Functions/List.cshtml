@section scripts {

    <script>
        var isEditingFunctions = false;
        var curFunctionsEditRow;

        let skills = []
        let academia = []
        let compensationMatrices = []
        $(document).ready(function () {
            let options = {
                buttonWidth: '100%',
                includeSelectAllOption: true,
                enableFiltering: false,
                enableClickableOptGroups: true,
                includeResetOption: true,
                includeResetDivider: true,
                enableCollapsibleOptGroups: true
            };
            $('#skillsIds').multiselect(options);
            $('#academiaIds').multiselect(options);
            $('#reviewPeriod').multiselect(options);
            $('#compensationMatrixId').multiselect(options);

            let gridObj = $("#FunctionsGrid")[0].ej2_instances[0];
            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_FunctionTemplate.getAllFunctionTemplates().done(function (data) {
                gridObj.dataSource = data;
                setTimeout(function () { gridObj.hideSpinner() }, 200);
            });

            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_SkillTemplate.getList({}).done(function (data) {
                skills = data.items;

                let dataMS = [];
                for (let i = 0; i < data.items.length; i++) {
                    let item = data.items[i];
                    dataMS.push({ label: `${item.code} - ${item.name}`, value: item.id, data: item });
                }
                $('#skillsIds').multiselect('dataprovider', dataMS);
            });
            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_AcademiaTemplate.getList({}).done(function (data) {
                academia = data.items;

                let dataMS = [];
                for (let i = 0; i < data.items.length; i++) {
                    let item = data.items[i];
                    dataMS.push({ label: `${item.code} - ${item.name}`, value: item.id, data: item });
                }
                $('#academiaIds').multiselect('dataprovider', dataMS);
            });
            cERP.appServices.hR.organizationalManagement.organizationStructure.oS_CompensationMatrixTemplate.getList({}).done(function (data) {
                compensationMatrices = data.items;

                let dataMS = [];
                for (let i = 0; i < data.items.length; i++) {
                    let item = data.items[i];
                    dataMS.push({ label: `${item.code} - ${item.name}`, value: item.id, data: item });
                }
                $('#compensationMatrixId').multiselect('dataprovider', dataMS);
            });

            $('#addFunctionsBtn').on('click', function () {
                isEditingFunctions = false;

                $('#submitFunctionBtn').val('Create Function');
            });
            $('#submitFunctionBtn').on('click', function (e) {
                e.preventDefault();
                if (ValidateForm('functionSpecificForm')) {
                    gridObj.showSpinner();
                    Swal.showLoading();

                    let form = [];
                    let functionDetails = $('#functionSpecificForm').find("textarea, input, select").serializeArray();
                    form = form.concat(functionDetails);

                    let params = objectifyForm(form);

                    let id = 0;
                    if (gridObj.dataSource.length > 0)
                        id = gridObj.dataSource[gridObj.dataSource.length - 1].id;

                    params.isEditing = isEditingFunctions;

                    if (isEditingFunctions) {
                        params.id = curFunctionsEditRow.id;

                        //cERP.appServices.hR.leaveRequestTemplates.update()
                    }
                    else {

                        //cERP.appServices.hR.leaveRequestTemplates.update()
                    }

                    params.DoesKPI = $('#doesKPI').parent().hasClass('active');

                    let selectedSkills = $('#skillsIds').val();
                    console.log(selectedSkills);
                    let selectedSkillsTemplates = [];
                    params.functionSkillTemplates = [];
                    for (var i = 0; i < selectedSkills.length; i++) {
                        selectedSkillsTemplates.push(skills.filter(x => x.id == selectedSkills[i])[0]);
                        let toAdd = { skillTemplate: selectedSkillsTemplates[i] };
                        if (isEditingFunctions) {
                            toAdd.functionTemplateId = curFunctionsEditRow.id;
                        }
                        params.functionSkillTemplates.push(toAdd);
                    }

                    let selectedAcademia = $('#academiaIds').val();
                    console.log(selectedAcademia);
                    let selectedAcademiaTemplates = [];
                    params.functionAcademiaTemplates = [];
                    for (var i = 0; i < selectedAcademia.length; i++) {
                        selectedAcademiaTemplates.push(academia.filter(x => x.id == selectedAcademia[i])[0]);
                        let toAdd = { academiaTemplate: selectedAcademiaTemplates[i] };
                        if (isEditingFunctions) {
                            toAdd.functionTemplateId = curFunctionsEditRow.id;
                        }
                        params.functionAcademiaTemplates.push(toAdd);
                    }

                    let formData = new FormData();
                    formData.append("info", JSON.stringify(params));
                    let xhrToken = $('input:hidden[name="__RequestVerificationToken"]').val();
                    formData.append("__RequestVerificationToken", xhrToken);
                    console.log(params);

                    $.ajax({
                        url: "?handler=FunctionTemplate",
                        async: true,
                        type: "POST",
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (data) {
                            Swal.hideLoading();
                            console.log(data);
                            if (isEditingFunctions) {
                                gridObj.refresh(); // refresh the Grid.

                                swal.fire("Success", "Function has successfully been updated", "success");

                                for (let i = 0; i < gridObj.dataSource.length; i++) {
                                    if (gridObj.dataSource[i].id == data.id) {
                                        gridObj.dataSource[i] = data;
                                    }
                                }
                                gridObj.refresh();
                            }
                            else {
                                gridObj.dataSource.push(data);

                                gridObj.refresh(); // refresh the Grid.

                                swal.fire("Success", "Function has successfully been added", "success");
                            }
                            gridObj.hideSpinner();
                        },
                        error: function (err) {
                            Swal.hideLoading();
                            if (isEditingFunctions)
                                swal.fire("Failed", "Function couldn't be updated, please fix all errors and try again.", "error");
                            else
                                swal.fire("Failed", "Function couldn't be added, please fix all errors and try again.", "error");

                            console.log(err);
                            gridObj.hideSpinner();
                        }
                    });
                }
                else {
                    Swal.close();
                    Swal.hideLoading();
                }
            });
        });
    </script>
}
